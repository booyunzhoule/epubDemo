<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/read_manipulator_gap"
        android:paddingRight="@dimen/read_manipulator_gap"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_read_manipulator_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="第一章"
            android:textColor="@color/read_manipulator_chapter"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_read_manipulator_chapter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/read_manipulator_gap"
        android:paddingLeft="@dimen/read_manipulator_gap"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ahsshdhjasdh爱上当回事的好事多喝水的哈市的杀毒活塞的哈市的还是的撒的还会递阿红的活塞和还是打算的"
            android:textColor="@color/default_black"
            android:textScaleX="1.05"
            android:lineSpacingExtra="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/read_manipulator_gap"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:textColor="@color/read_manipulator_chapter"
            android:text="11/22"/>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="5dp"
            android:maxHeight="5dp"
            android:max="100"
            android:progress="50"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/shape_read_manipulator_progress"/>
    </LinearLayout>
</LinearLayout>