<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/default_trans"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_h"
        android:background="@color/default_gray"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_read_book_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/zjb_icon_back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/image_read_book_public"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/zjb_icon_read_book_public"/>

        <ImageView
            android:id="@+id/image_read_book_tool_expendable"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="9dp"
            android:scaleType="center"
            android:src="@drawable/zjb_icon_menu_fold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/view_menu_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>